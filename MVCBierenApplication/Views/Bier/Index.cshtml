@using MVCBierenApplication.Models
@model List<Bier>

@{
    ViewBag.Title = "Index";
}

<h2>Alle Bieren</h2>

<table class="zebra">
    <thead>
        <tr>
            <th>ID</th>
            <th>Naam</th>
            <th>Alcohol</th>
            <th>Verwijderen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bier in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => bier.ID)</td>
                <td>@bier.Naam</td>
                <td>@Html.DisplayFor(m => bier.Alcohol)</td>
                <td><a href='@Url.Action("Verwijderen", new { ID = bier.ID })' title="bier @bier.ID verwijderen">
    <img src='@Url.Content("~/Images/delete.png")' />
</a></td>
            </tr>
        }
    </tbody>
</table>

@{var bierurl = Url.Action("Toevoegen", "Bier");}
<a href="@bierurl">Bier toevoegen</a>


